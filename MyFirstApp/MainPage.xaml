<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstApp.MainPage">
    
    <StackLayout BackgroundColor="Yellow" Padding="5, 5">
        
        <Label Text="Регистрация" FontSize="25" HorizontalOptions="Center"/>
        <Entry x:Name="nameField" Placeholder="Enter name" />
        <Entry x:Name="emailField" Placeholder="Enter email" />
        <Entry x:Name="passwordField" Placeholder="Enter password" IsPassword="True" />

        <Label Text="Вы согластны?" />
        <CheckBox x:Name="checkField" />

        <Button x:Name="buttonSend" Text="Отправить" Clicked="Button_Click" Margin="10,0,10,0"/>
        <Label x:Name="errorText" TextColor="Red" FontSize="15" />
        


    </StackLayout>
    
</ContentPage>
